<div class="col-md-6 mx-auto">
  <div class="card">
    <div class="card-header">
      <h3>Editar Nota</h3>
    </div>
    <div class="card-body">
      <form class="" action="/notes/edit-note/{{note._id}}?_method=PUT" method="post">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group">
          <input type="text" name="title" value="{{note.title}}" class="form-control">
        </div>
        <div class="form-group">
          <textarea name="description"class="form-control" >{{note.description}}</textarea>
        </div>
        <div class="form-group">
          <button type="submit" name="button" class="btn btn-primary btn-block">Editar</button>
        </div>
      </form>
    </div>

  </div>

</div>
